<!-- views/mostrarLista.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista Comerciante</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h2>Lista Comerciante</h2>
    <div class="mb-3">
      <form method="GET" action="/listas">
        <input
          type="text"
          class="form-control"
          name="searchTerm"
          placeholder="Buscar..."
          value="{{searchTerm}}">
        <button type="submit" class="btn btn-primary mt-2">Buscar</button>
      </form>
    </div>
    <div class="table-responsive table-container">
      {{#if filteredProducts.length}}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Código</th>
              <th>Descripción</th>
              <th>Precio</th>
            </tr>
          </thead>
          <tbody>
            {{#each filteredProducts}}
              <tr>
                <td>{{this.codigo}}</td>
                <td>{{this.descripcion}}</td>
                <td>{{this.precio}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <p class="alert alert-info">No hay datos para mostrar.</p>
      {{/if}}
    </div>
  </div>
</body>
</html>
